generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  email String @unique
  todos Todo[]
}

model Todo {
  id        String  @id @default(cuid())
  title     String
  completed Boolean @default(false)
  userId    String
  user      User    @relation(fields: [userId], references: [id])
}
